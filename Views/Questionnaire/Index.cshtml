@using CustomerSurveySystem.Enums
@model IList<CustomerSurveySystem.Services.Interface.QuestionDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-header">
    <h3 class="card-title">@ViewData["QuestionnaireTitle"]</h3>

    <div class="card-tools">
        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="بستن">
            <i class="fas fa-minus"></i>
        </button>
    </div>
</div>
<div class="card-body">
    <div>
        <div class="container py-3 my-3 border rounded shadow-sm">
            <div class="row">
                <section class="col-12">
                    @using (Html.BeginForm("NextStep", "Questionnaire", FormMethod.Post, new { id = "QuestionnaireForm" }))
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <input type="hidden" name="currentStepId" value="@item.CurrentStepId"/>
                            <input type="hidden" name="questionnaireId" value="@ViewData["QuestionnaireId"]"/>
                            <input type="hidden" name="answerSheetId" value="@ViewData["AnswerSheetId"]"/>
                            <ul class="nav nav-tabs flex-nowrap" role="tablist" style="display: none">
                                <li role="presentation" class="nav-item">
                                    <a href="question_@i" class="nav-link active" data-toggle="tab" aria-controls="question_@i" role="tab" title="Step @i"> @i </a>
                                </li>
                            </ul>

                            <div class="tab-content py-2">
                                <div class="tab-pane active" role="tabpanel" id="step1">
                                    @if (item.QuestionType == QuestionType.MultiChoice && item.Questions != null)
                                    {
                                        <h5>@item.Title</h5>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                @{ int j = 1; }
                                                @foreach (var question in item.Questions.Options)
                                                {
                                                    if (item.SingleSelect)
                                                    {
                                                        <div class="form-group">
                                                            <div class="custom-control custom-radio">
                                                                <input @(item.IsRequire ? "required" : "") class="custom-control-input" value="@item.QuestionId.ToString()_@question" type="radio" id="customRadio_@j" name="radio">
                                                                <label for="customRadio_@j" class="custom-control-label">@question</label>
                                                            </div>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="form-group">
                                                            <div class="custom-control custom-checkbox">
                                                                <input class="custom-control-input" @(item.IsRequire ? "required" : "") name="checkbox" type="checkbox" id="customCheckbox_@j" value="@item.QuestionId.ToString()">
                                                                <label for="customCheckbox_@j" class="custom-control-label">@question</label>
                                                            </div>
                                                        </div>
                                                    }

                                                    j++;
                                                }
                                            </div>
                                        </div>
                                        i++;
                                        <hr/>
                                    }
                                    @if (item.QuestionType == QuestionType.Text)
                                    {
                                        <h5>@item.Title</h5>
                                        <div class="form-group">
                                            <div class="col-sm-10">
                                                <textarea class="form-control"  name="texts[]" cols="30" rows="4" @(item.IsRequire ? "required" : "")></textarea>
                                            </div>
                                        </div>
                                        <hr/>
                                    }
                                    <div class="form-group">

                                        @if (item.QuestionType == QuestionType.Score)
                                        {
                                            <h5>@item.Title</h5>
                                            <input id="input-id" required="" name="input-1" class="rating rating-loading" data-min="0" data-max="5" data-step="1">
                                            <hr/>
                                        }
                                        @if (item.QuestionType == QuestionType.Number)
                                        {
                                            <h5>@item.Title</h5>
                                            <input @(item.IsRequire ? "required" : "") class="form-group" name="numbers[]" type="number"/>
                                            <hr/>
                                        }
                                    </div>
                                    @* <div class="tab-pane" role="tabpanel" id="complete"> *@
                                    @*     <h3>Complete!</h3> *@
                                    @*     <p>You have successfully completed all steps.</p> *@
                                    @* </div> *@
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            i++;
                        }

                        <input type="submit" class="btn btn-primary next-step float-right" value="بعدی"/>
                    }
                </section>
            </div>
        </div>
    </div>
</div>
<!-- /.card-body -->
<div class="card-footer">

</div>

@section scripts
{
    <script type="text/javascript">
    $("#input-id").rating();
    </script>
}